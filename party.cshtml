@{
    Layout = "~/_SiteLayout.cshtml";
    //party passed from database party class created for testing purposes
    int[] userIds = { 0, 1 };
    int[] charIds = { 0, 1 };
    string[] inv = { "broad sword", "potion of minor healing I", "potion of minor healing I", "potion of speed" };
    Party party = new Party(0, "Dino-mite", 0, userIds, charIds, inv);

    //get relavent data from party
    var partyName = party.getName();
    var inventory = party.getInventory();

    //get users from database will create users here for now
    User user1 = new User(0, "123", "email", false);
    User user2 = new User(1, "123", "email", false);

    User[] users = { user1, user2 };

    //get characters from database. will create characters here for now
    Character char1 = new Character();
    Character char2 = new Character();
    char1.generateRandomAttributes();
    char2.generateRandomAttributes();

    Character[] characters = { char1, char2 };
}
<div class="jumbotron vertical-center">
    <h1 class="text-center text-capitalize text-lg-center">@partyName</h1>
    <p class="text-md-center">Party<a href=""><i class="ui-icon-wrench"></i></a></p>
</div>
<div class="row">
    <div class="col-sm">
        <div class="card mt-5">
            <div class="card-header" data-toggle="collapse" href="#collapseOne" aria-expanded="true">
                <h2>Inventory</h2>
            </div>
            <div class="card-body collapse show" id="collapseOne">
                <table class="table table-dark table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Item Name</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int numrepeated = 1;
                            int slot = 1;
                            for (int i = 0; i < inventory.Length; i++)
                            {
                                if (i + 1 < inventory.Length && inventory[i] == inventory[i + 1])
                                {
                                    ++numrepeated;

                                }
                                else
                                {

                                    <tr>
                                        <th scope="row">@slot</th>
                                        <td>@inventory[i]</td>
                                        <td>@numrepeated</td>
                                    </tr>
                                    numrepeated = 1;
                                    slot += 1;
                                }
                            }
                        }
                    </tbody>
                </table>
                <form>
                    <div class="form-row">
                        <!--   create popups      -->
                        <input class="form-control btn-dark" type="button" id="Add" name="Add" value="Add" data-toggle="modal" data-target="#addModal">
                        <input class="form-control btn-dark" type="button" id="Remove" name="Remove" value="Remove" data-toggle="modal" data-target="#removeModal">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm">
        <div class="card mt-5">
            <div class="card-header" data-toggle="collapse" href="#collapseTwo" aria-expanded="true">
                <h2>Members</h2>
            </div>
            <div class="card-body collapse show" id="collapseTwo">

                <div class="row">
                    <!-- DM Member slot -->
                    <span class="border-right border-dark">
                        <div class="col-sml">
                            <div class="col-sm">
                                <img src="~/Images/rule-book.png" class="img-thumbnail rounded float-left w-25"/>
                            </div>
                            <p>dugeon master</p>
                        </div>
                    </span>
                    @foreach (var x in characters)
                    {
                        <span class="border-right border-dark">
                            <div class="col-sm">
                                <div class="row">
                                    <div class="col-sm">
                                        @{
                                            //get image
                                            if (x.getRace() == "Dragonborn")
                                            {

                                            }
                                            <img src="~/Images/dragonborn_male.png" class="img-thumbnail rounded float-left w-25" />
                                        }
                                    </div>
                                    <div class="col-sm">
                                        <p><a href="">@x.getName()</a></p>
                                        <p>Sex: @x.getGender()</p>
                                        <p>Race: @x.getRace()</p>
                                        <p>Role: @x.getClass()</p>
                                        <p>Level: @x.getLevel()</p>
                                        <!--  link to character page(readonly) -->
                                        <p><a href="">Remove</a></p> <!-- Repopulate page  -->
                                    </div>

                                    <!--  username  -->
                                    <div class="row">
                                        <div class="col-sm">
                                            <p>@x.getUser()</p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pop-ups -->
<div id="addModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close text-left" data-dismiss="modal">&times;</button>
                <h4 class="col-12 modal-title vertical-center">Add Item</h4>
            </div>
            <div class="modal-body">
                <div class="form-group col-lg-6">
                    <label for="item">Item</label>
                    <input type="text" class="form-control" id="item" placeholder="Enter item name...">
                </div>
                <div class="form-group col-lg-6">
                    <label for="amount">Amount</label>
                    <input type="number" class="form-control" id="amount" placeholder="Enter amount...">
                </div>
            </div>
            <div class="modal-footer">
                <div class="w-100 text-center">
                    <button type="button" class="btn btn-default">Add</button> <!-- Repopulate page  -->
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>

    </div>
</div>

<div id="removeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close text-left" data-dismiss="modal">&times;</button>
                <h4 class="col-12 modal-title vertical-center">Remove Item</h4>
            </div>
            <div class="modal-body">
                <div class="list-group">
                    @foreach (var x in inventory)
                    {
                        <button type="button" class="list-group-item list-group-item-action active">@x</button>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <div class="w-100 text-center">
                    <button type="button" class="btn btn-default">Remove</button> <!-- Repopulate page  -->
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>

    </div>
</div>

